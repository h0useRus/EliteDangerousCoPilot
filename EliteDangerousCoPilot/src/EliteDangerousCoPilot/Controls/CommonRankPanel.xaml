<UserControl x:Class="NSW.EliteDangerous.Copilot.Controls.CommonRankPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NSW.EliteDangerous.Copilot.Controls"
             mc:Ignorable="d"
             Width="120" Height="120">
    <StackPanel>
        <Image Name="RankIcon" RenderOptions.BitmapScalingMode="HighQuality" Height="80"  Margin="5">
            <Image.BitmapEffect>
              <DropShadowBitmapEffect Direction="135" ShadowDepth="3"  />
            </Image.BitmapEffect>
        </Image>
        <TextBlock Name="RankText" TextAlignment="Center" />
        <ProgressBar Name="RankProgress" Margin="2,0,2,0" Minimum="0" Maximum="100" Height="3"/>
    </StackPanel>
</UserControl>
