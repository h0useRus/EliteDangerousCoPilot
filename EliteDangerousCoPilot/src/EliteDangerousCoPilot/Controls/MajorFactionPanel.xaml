<UserControl x:Class="NSW.EliteDangerous.Copilot.Controls.MajorFactionPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NSW.EliteDangerous.Copilot.Controls"
             mc:Ignorable="d"
             Width="120" Height="130">
    <Grid>
        <Image Source="{Binding Image}" RenderOptions.BitmapScalingMode="HighQuality" Height="120"/>
        <StackPanel>
            <TextBlock Name="tbRank" Text="{Binding Text}" TextAlignment="Center" />
            <TextBlock Name="tbRepuation" Margin="0,98,0,0" Text="{Binding Reputation}" TextAlignment="Center" />
        </StackPanel>     
    </Grid>
</UserControl>
